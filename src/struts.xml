<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />

	<package name="default" namespace="/" extends="struts-default">

		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

	</package>

	<package name="base" namespace="/" extends="default">

		<action name="index">
			<result type="tiles">index</result>
		</action>

		<action name="locale" class="action.locale.Locale">
			<result name="success" type="redirect">%{url}</result>
		</action>

		<action name="launchSimulator" class="action.StartSimulatorAction">

			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />

			<result name="success" type="redirectAction">
				<param name="namespace">/</param>
				<param name="actionName">log</param>
			</result>
		</action>


		<action name="stats">
			<result type="tiles">stats</result>
		</action>

		<action name="flights">
			<result type="tiles">flights</result>
		</action>

		<action name="log">

			<interceptor-ref name="store">
				<param name="operationMode">RETRIEVE</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack" />
			
			<result type="tiles">log</result>
		</action>

		<action name="500">
			<result type="tiles">500</result>
		</action>

		<action name="404">
			<result type="tiles">404</result>
		</action>

		<action name="">
			<result type="tiles">index</result>
		</action>

	</package>

	<package name="login" namespace="/" extends="default">

		<action name="loginSubmit" class="action.user.LoginAction">
			<result name="login" type="tiles">login</result>
			<result name="input" type="tiles">login</result>
			<result name="success" type="redirect">%{url}</result>
		</action>

		<action name="logout" class="action.user.LogoutAction">
			<result type="redirect">%{url}</result>
		</action>

		<action name="login" class="action.StepAction">
			<result type="tiles">login</result>
		</action>

		<action name="accountManager">
			<result type="tiles">accountManager</result>
		</action>

	</package>

	<package name="register" namespace="/register" extends="default">

		<action name="PassengerSubmit" class="action.user.RegisterPassengerAction">
			<result name="login" type="tiles">registerPassenger</result>
			<result name="error" type="tiles">registerPassenger</result>
			<result name="input" type="tiles">registerPassenger</result>
			<result name="success" type="redirect">%{url}</result>
		</action>

		<action name="Passenger" class="action.StepAction">
			<result type="tiles">registerPassenger</result>
		</action>

		<action name="AdminSubmit" class="action.user.RegisterAdminAction">
			<result name="login" type="tiles">registerAdmin</result>
			<result name="error" type="tiles">registerAdmin</result>
			<result name="input" type="tiles">registerAdmin</result>
			<result name="success" type="redirect">%{url}</result>
		</action>

		<action name="Admin" class="action.StepAction">
			<result type="tiles">registerAdmin</result>
		</action>

		<action name="AirlineSubmit" class="action.user.RegisterAirlineAction">
			<result name="login" type="tiles">registerAirline</result>
			<result name="error" type="tiles">registerAirline</result>
			<result name="input" type="tiles">registerAirline</result>
			<result name="success" type="redirect">%{url}</result>
		</action>

		<action name="Airline" class="action.StepAction">
			<result type="tiles">registerAirline</result>
		</action>

		<action name="ControllerSubmit" class="action.user.RegisterControllerAction">
			<result name="login" type="redirectAction">
				<param name="actionName">Airline</param>
				<param name="namespace">/register</param>
				<param name="user">%{user}</param>
				<param name="birthdate">%{birthdate}</param>
				<param name="address">%{address}</param>
				<param name="secondName">%{secondName}</param>
				<param name="name">%{name}</param>
				<param name="repeatPassword">%{repeatPassword}</param>
			</result>
			<result name="error" type="tiles">registerController</result>
			<result name="input" type="tiles">registerController</result>
			<result name="success" type="redirect">%{url}</result>
		</action>

		<action name="Controller" class="action.StepAction">
			<result type="tiles">registerController</result>
		</action>

		<action name="MantainanceSubmit" class="action.user.RegisterMantainanceAction">
			<result name="login" type="tiles">registerMantainance</result>
			<result name="error" type="tiles">registerMantainance</result>
			<result name="input" type="tiles">registerMantainance</result>
			<result name="success" type="redirect">%{url}</result>
		</action>

		<action name="Mantainance" class="action.StepAction">
			<result type="tiles">registerMantainance</result>
		</action>

	</package>

</struts>