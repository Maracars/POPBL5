<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="default" extends="struts-default">

		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

	</package>

	<package name="base" namespace="/" extends="default">

		<action name="index">
			<result type="tiles">index</result>
		</action>

		<action name="stats">
			<result type="tiles">stats</result>
		</action>

		<action name="flights">
			<result type="tiles">flights</result>
		</action>

		<action name="500">
			<result type="tiles">500</result>
		</action>

		<action name="404">
			<result type="tiles">404</result>
		</action>

		<action name="">
			<result type="tiles">index</result>
		</action>

	</package>

	<package name="login" namespace="/" extends="default">

		<action name="loginSubmit" class="action.user.LoginAction">
			<result name="login" type="tiles">login</result>
			<result name="input" type="tiles">login</result>
			<result name="success" type="tiles">index</result>
		</action>
		
		<action name="registerSubmit" class="action.user.RegisterAction">
			<result name="login" type="tiles">register</result>
			<result name="input" type="tiles">register</result>
			<result name="success" type="tiles">index</result>
		</action>

		<action name="logout" class="action.user.LogoutAction">
			<result type="tiles">index</result>
		</action>
		
		<action name="register">
			<result type="tiles">register</result>
		</action>

		<action name="login">
			<result type="tiles">login</result>
		</action>
	</package>

</struts>