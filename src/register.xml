			</interceptor-ref>

			<result name="noPermission" type="redirectAction">
				<param name="actionName">index</param>
				<param name="namespace">/</param>
			</result>
			<result name="success" type="redirect">%{url}</result>
			<result name="*" type="tiles">registerAdmin</result>
		</action>

